---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import background from "@assets/background.png";
import { Palette, Calendar, Info } from "lucide-astro";
import RegisterButton from "../components/RegisterButton.astro";
---

<Layout title="Further South">
  <section class="hero">
    <h1>ðŸŒŠ<span class="title-text">Further South</span>ðŸ¦Š</h1>
    <div class="hero-image" aria-hidden="true">
      <Image src={background} alt="Further South Mascot" layout="full-width" />
    </div>

    <div class="info">
      <p class="lede">
        <b> Further South </b> is an up-and-coming furry convention by the seaside
        â€” celebrating community, art, fursuits, and sun-soaked fun!
      </p>
      <p>
        Hosted in the heart of Portsmouth, where historic docks meet rolling
        waves and golden sunsets. Join us for our second year running and come
        make it down further south!
      </p>
      <h2 class="dates">March 6th-9th</h2>

      <RegisterButton />

      <div class="highlights" aria-label="Convention highlights">
        <a href="/activities/marketplace/" class="highlight-button">
