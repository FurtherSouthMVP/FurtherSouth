        <a href="/about-us/" class="highlight-button">
          <Info class="icon" /> About the Convention
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* --- Page hero --- */
  .hero {
    min-height: 100vh;
    width: 100%;
    background: linear-gradient(
      to bottom,
      #a7f3d0 0%,
      #60a5fa 50%,
      #1e3a8a 100%
    );
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1.25rem 3rem;
  }

  .hero-image {
    width: 100%;
    margin: 2rem 0 1rem;
    max-width: 1400px;
  }
  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }

  /* --- Title --- */
  h1 {
    font-family: "Pacifico", cursive;
    font-size: clamp(1.5rem, 8vw, 5.5rem);
    letter-spacing: clamp(2px, 0.8vw, 8px);
    margin: 0 0 0.25rem 0;
    text-align: center;
    display: inline-block;

    /* Allow clean wrapping */
    word-wrap: break-word;
    overflow-wrap: break-word;
    white-space: normal;

    /* Gradient text */
    background: linear-gradient(90deg, var(--sea-500) 0%, var(--palm) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;

    /* Outline + subtle glow */
    text-shadow:
      0 0 3px rgba(0, 0, 0, 0.4),
      0 2px 6px rgba(0, 0, 0, 0.3);

    animation: bob 3.5s ease-in-out infinite;
  }

  .title-text {
    -webkit-text-stroke: 0.5px white;
  }

  /* --- Info card --- */
  .info {
    width: 100%;
    max-width: 1100px;
    background: linear-gradient(
      135deg,
      var(--glass),
      rgba(255, 255, 255, 0.55)
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: clamp(1.5rem, 4vw, 3rem);
    border-radius: var(--radius-lg);
    border: 2px solid var(--glass-border);
    text-align: center;
    margin-top: 1rem;
    box-shadow: var(--shadow);
    color: var(--ink);
    font-family:
      "Quicksand",
      system-ui,
      -apple-system,
      Segoe UI,
      Roboto,
      sans-serif;
    line-height: 1.8;
  }

  .info .lede {
    font-size: clamp(1.1rem, 2.4vw, 1.35rem);
    font-weight: 600;
    margin: 0.5rem auto 0.5rem;
    max-width: 70ch;
  }

  .info p {
    margin: 0.5rem auto 0;
    max-width: 78ch;
  }

  .info .dates {
    font-family: "Pacifico", cursive;
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--sun);
    margin: 1rem 0 0.25rem;
    text-shadow: 0 0 1px black;
  }

  /* --- Highlights --- */
  .highlights {
    margin: 2rem auto 0; /* more spacing from the register button */
    padding: 0;
    display: grid;
    gap: 0.5rem;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    max-width: 800px;
  }

  .highlight-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--ink);
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid var(--glass-border);
    padding: 0.5rem 0.75rem;
    border-radius: 999px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition:
      transform 0.15s ease,
      background 0.15s ease;
    min-width: 15rem;
    width: fit-content;
    margin: 0.25rem auto;
  }

  .highlight-button:hover {
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.7);
  }

  .highlight-button:active {
    transform: translateY(1px);
  }

  .highlight-button .icon {
    width: 18px;
    height: 18px;
    color: var(--sea-500);
  }

  /* --- Motion --- */
  @keyframes bob {
    0%,
    100% {
      transform: translateY(0) rotate(-1deg);
    }
    50% {
      transform: translateY(-4px) rotate(1deg);
    }
  }
  @media (prefers-reduced-motion: reduce) {
    h1 {
      animation: none;
    }
    .register {
      transition: none;
    }
  }

  /* --- Small tweaks for very narrow screens --- */
  @media (max-width: 900px) {
    .highlights {
      grid-template-columns: 1fr;
    }
  }
</style>
