---
import '../styles/global.css';
import NavMenu from '../components/NavMenu.astro';
import { site } from '../data/site';
const { title } = Astro.props as { title?: string };
const pageTitle = title ? `${title} | ${site.name}` : site.name;
---
<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="m-0 min-h-full flex flex-col font-sans text-ink bg-bg-mid">
    <header class="bg-white border-b border-soft relative z-10">
      <nav class="max-w-[72rem] mx-auto px-4 py-2 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 no-underline text-inherit">
          {site.logo && <img src={site.logo} alt={site.name + ' logo'} class="h-8 w-8" />}
          <span class="font-bold">{site.name}</span>
        </a>
        <div class="flex items-center gap-4">
          <NavMenu label="Activities" folder="activities" />
          <NavMenu label="About Us" folder="about-us" />
        </div>
      </nav>
    </header>
    <main id="main" class="flex-1 max-w-[72rem] mx-auto w-full px-4 py-8">
      <slot />
    </main>
    <footer class="border-t border-soft text-muted py-4 px-4">
      <div class="max-w-[72rem] mx-auto">Â© {new Date().getFullYear()} {site.name}</div>
    </footer>
  </body>
</html>
