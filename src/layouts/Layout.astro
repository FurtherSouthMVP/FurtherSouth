---
import "../styles/global.css";
import NavMenu from "../components/NavMenu.astro";
import { site } from "../data/site";
const { title } = Astro.props as { title?: string };
const pageTitle = title ? `${title} | ${site.name}` : site.name;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="m-0 min-h-full flex flex-col font-sans text-ink bg-bg-mid">
    <header
      id="site-header"
      class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-soft
         transition-all duration-300 ease-out
         hover:opacity-100 hover:translate-y-0"
    >
      <nav
        class="max-w-[72rem] mx-auto px-4 py-2 flex items-center justify-between"
      >
        <!-- your existing left cluster -->
        <div class="flex items-center">
          <a href="/" class="flex items-center no-underline text-inherit">
            {
              site.logo && (
                <img
                  src={site.logo}
                  alt={site.name + " logo"}
                  class="h-8 w-8"
                />
              )
            }
            <span class="ml-2 font-bold text-xl">{site.name}</span>
          </a>
          <!-- location/date to the right of title (outside anchor) -->
          <div class="ml-8 flex flex-col leading-tight text-xs text-slate-700">
            <span>{site.location}</span>
            <span>{site.date}</span>
          </div>
        </div>

        <!-- right cluster -->
        <div class="flex items-center gap-4">
          <NavMenu label="Registration" folder="registration" />
          <NavMenu label="Activities" folder="activities" />
          <NavMenu label="About Us" folder="about-us" />
        </div>
      </nav>
    </header>

    <main id="main" class="flex-1 max-w-[72rem] mx-auto w-full px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-soft text-muted py-4 px-4">
      <div class="max-w-[72rem] mx-auto">
        Â© {new Date().getFullYear()}
        {site.name}
      </div>
    </footer>
  </body>
</html>

<script is:inline>
  // Hide the navbar after a small scroll; show again on hover or when near top.
  (function () {
    const header = document.getElementById("site-header");
    const HIDE_AFTER = 80; // px

    function update() {
      const shouldHide = window.scrollY > HIDE_AFTER;
      header.classList.toggle("opacity-0", shouldHide);
      header.classList.toggle("-translate-y-2", shouldHide);
      header.classList.toggle("shadow-none", shouldHide);
      header.classList.toggle("shadow-sm", !shouldHide);
    }

    // Run on load and on scroll
    update();
    window.addEventListener("scroll", update, { passive: true });
  })();
</script>
