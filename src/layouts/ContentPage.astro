---
// Generic site-wide layout that uses a reusable <Banner/>.
// Works for pages and reads frontmatter for defaults.
import Layout from './Layout.astro';
import Banner from '../components/Banner.astro';
import { site } from '../data/site';

const {
  title = site.name,
  description = site.description,
  heroImage = '',
  bannerLogo = site.logo,
  bannerEyebrow = site.eyebrow ?? site.name,
  cta,
  updated,
  heroVariant = 'default',
  heroAlign = 'left',
  hideHero = false,
} = Astro.props;
---
<Layout>
  <a class="sr-only focus:not-sr-only focus:p-2 focus:bg-yellow-100" href="#main">Skip to content</a>

  {!hideHero && (
    <Banner
      title={title}
      eyebrow={bannerEyebrow}
      description={description}
      logo={bannerLogo}
      heroImage={heroImage}
      updated={updated}
      cta={cta}
      variant={heroVariant}
      align={heroAlign}
    />
  )}

  <main id="main" class="py-8 md:py-16">
    <article class="max-w-[72rem] mx-auto px-4">
      <slot />
    </article>
  </main>

  <footer class="border-t border-soft text-muted py-8 px-4">
    <div class="max-w-[72rem] mx-auto">Â© {new Date().getFullYear()} {site.name}</div>
  </footer>
</Layout>
